<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical">
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Taller 1"
            android:textColor="#3955F3"
            android:layout_marginTop="20dp"
            android:textSize="25dp"/>


        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="fibonacci"
            app:backgroundTint="#024B85"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="100dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="20dp"
            android:onClick="botonFibonacci"/>
        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_below="@id/button7"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Factorial"
            app:backgroundTint="#024B85"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="100dp"
            android:layout_below="@id/editTextNumber"
            android:onClick="botonFactorial"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button8"
            android:entries="@array/numFactorial"
            android:layout_marginTop="10dp"
           />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="PaÃ­ses"
            app:backgroundTint="#024B85"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="100dp"
            android:layout_below="@id/spinner"
            android:layout_marginTop="20dp"
            android:onClick="botonPaises"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button12"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>